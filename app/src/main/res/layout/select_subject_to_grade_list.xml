<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_layout_sharp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:id="@+id/rlSelectSubject_internalAttendanceList"
        android:clickable="true"
        android:focusable="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSubjectCode_internalAttendanceList"
                android:textColor="@color/colorBlue"
                android:textSize="14sp"
                android:textStyle="italic|bold"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSubjectName_internalAttendanceList"
                android:textColor="@color/colorBlue"
                android:layout_below="@id/tvSubjectCode_internalAttendanceList"
                android:textSize="12sp"
                android:textStyle="italic"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSubjectClass_internalAttendanceList"
                android:layout_below="@id/tvSubjectName_internalAttendanceList"
                android:textColor="@color/colorWhite"
                android:textStyle="italic"
                android:textSize="12sp"
                android:layout_marginStart="10dp"/>



        </RelativeLayout>

        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/ibProceedToGrade_internalAttendanceList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic__arrow_forward"
            android:background="@drawable/button_background"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimayDark"/>


    </RelativeLayout>


</RelativeLayout>